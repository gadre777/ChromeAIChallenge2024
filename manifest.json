{
  "manifest_version": 3,
  "name": "LexiLens",
  "version": "1.0",
  "description": "Summarizes selected text at different reading levels.",
  "permissions": [
    "activeTab",
    "storage",  
    "scripting",
    "webRequest"
  ],
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "css": ["popup.css"]
   }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lexilens.png",
      "48": "lexilens.png",
      "128": "lexilens.png"
    }
  }
}
