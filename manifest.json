{
  "manifest_version": 3,
  "name": "LexiLens",
  "version": "1.0",
  "description": "Summarizes selected text at different reading levels.",
  "permissions": [
    "activeTab",
    "storage",  
    "scripting",
    "webRequest"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lexilens.svg",
      "48": "lexilens.svg",
      "128": "lexilens.svg"
    }
  }
}
